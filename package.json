{
  "name": "@sudobility/heavymath_indexer_client",
  "version": "0.0.3",
  "description": "React and React Native compatible client library for Heavymath prediction market indexer API with TypeScript support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "check-all": "npm run lint && npm run typecheck && npm run test:run"
  },
  "keywords": [
    "indexer",
    "client",
    "react",
    "react-native",
    "typescript",
    "prediction-market",
    "heavymath"
  ],
  "author": "John Huang",
  "license": "MIT",
  "peerDependencies": {
    "@sudobility/heavymath_types": "^0.0.1",
    "@sudobility/types": "^1.9.31",
    "@tanstack/react-query": "^5.90.5",
    "react": "^19.2.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@sudobility/heavymath_types": "^0.0.1",
    "@sudobility/types": "^1.9.31",
    "@tanstack/react-query": "^5.90.5",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.4",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.0.8",
    "prettier": "^3.6.2",
    "react": "^19.2.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.4",
    "zustand": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnqh/heavymath_indexer_client.git"
  }
}
